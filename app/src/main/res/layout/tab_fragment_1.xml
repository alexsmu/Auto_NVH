<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MyApplication"
    android:orientation="vertical">

    <ToggleButton
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textOff="@string/noise"
        android:textOn="@string/noise"
        android:disabledAlpha="1.2"
        android:id="@+id/toggleNoise"
        android:background="@drawable/toggle_selector"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textOff="@string/vibration"
        android:textOn="@string/vibration"
        android:disabledAlpha="1.2"
        android:id="@+id/toggleVibration"
        android:background="@drawable/toggle_selector"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/toggleNoise"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/EnterDeviceInfo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:listitem="@layout/pulley_device_list_item"
        android:layout_below="@+id/addDeviceButton">
    </ListView>

    <Button
        android:id="@+id/addDeviceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addDevice"
        android:drawableStart="@android:drawable/ic_input_add"
        android:layout_below="@+id/toggleVibration"
        android:layout_centerHorizontal="true" />

</RelativeLayout>