<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="MyApplication"
        android:orientation="vertical"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/pulley_ratios"
        android:id="@+id/textView"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/devices"
        android:orientation="vertical"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/device1"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/check1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:checked="true"/>
            <EditText
                android:id="@+id/name1"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:hint="@string/name"
                android:text="@string/crankshaft"/>
            <EditText
                android:id="@+id/value1"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:hint="@string/ratio"
                android:text="@string/_1_0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/device2"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/check2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />
            <EditText
                android:id="@+id/name2"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:hint="@string/name" />
            <EditText
                android:id="@+id/value2"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:hint="@string/ratio"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/device3"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/check3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />
            <EditText
                android:id="@+id/name3"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:hint="@string/name" />
            <EditText
                android:id="@+id/value3"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:hint="@string/ratio"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/device4"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/check4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />
            <EditText
                android:id="@+id/name4"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:hint="@string/name" />
            <EditText
                android:id="@+id/value4"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:hint="@string/ratio"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/device5"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/check5"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />
            <EditText
                android:id="@+id/name5"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:hint="@string/name" />
            <EditText
                android:id="@+id/value5"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:hint="@string/ratio"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/device6"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/check6"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />
            <EditText
                android:id="@+id/name6"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:hint="@string/name" />
            <EditText
                android:id="@+id/value6"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:hint="@string/ratio"/>
        </LinearLayout>
    </LinearLayout>

    <ToggleButton
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textOff="@string/noise"
        android:textOn="@string/noise"
        android:disabledAlpha="1.2"
        android:id="@+id/toggleNoise"
        android:background="@drawable/toggle_selector"
        android:layout_below="@+id/devices"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textOff="@string/vibration"
        android:textOn="@string/vibration"
        android:disabledAlpha="1.2"
        android:id="@+id/toggleVibration"
        android:background="@drawable/toggle_selector"
        android:layout_below="@+id/toggleNoise"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

